<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dip"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom "
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adresse "
            android:textSize="14dp"
            android:textColor="@color/quantum_grey700"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horaires "
            android:textSize="14sp"
            android:textStyle="italic"
            android:textColor="@color/quantum_grey700"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/fragment_list_item_details"
        android:layout_width="60dip"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toStartOf="@id/fragment_list_item_thumb">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="120m"
            android:textSize="20sp"
            android:textColor="@color/light_grey"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="(2) "
            android:textSize="14sp"
            android:drawableStart="@drawable/ic_participant"
            android:textColor="@color/quantum_grey700"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/ic_star_2"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/fragment_list_item_thumb"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_margin="10dip"
        android:src="@drawable/bg_resto"
        android:layout_alignParentEnd="true"/>

    <View
        android:layout_height="1dp"
        android:layout_width="match_parent"
        android:background="@color/black"/>

</RelativeLayout>